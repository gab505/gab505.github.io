// stylus variables
$serif = 'PT Serif'
$thick = 'Passion One'

// css variables
:root
    --col1 #343839
    --col2 #352e35
    --col3 #015f6b
    --col4 #c1576e
    --col5 #008b9e
    --col6 #e4867a

*
    margin 0
    padding 0
    box-sizing border-box

body
    font-family 'PT Sans', sans-serif
    background-image url(https://gab505.github.io/pictures/kendo/20160227_202851.jpg)
    background-repeat no-repeat
    background-size 100vw auto
    background-position 0 0
    background-attachment fixed
    overflow-x hidden

.topNav
    background var(--col3) !important
    color white
    text-align center
    position relative
    align-items center
    .menu
        vertical-align top
        padding 20px 0
        position absolute
        top 0
        left 0
        width 100%
        &.fixed
            position fixed
            top 0
            left 0
            background white
            color skyblue
            z-index 1
            width 100%
            height auto
            opacity 0
            transition opacity 2s
        &.fixed.show
            opacity 0.8
    .portrait
        width 200px
        height 200px
        border-radius 100px
        background-image url('https://gab505.github.io/pictures/family/1471528092674.jpg')
        background-position center
        background-size cover
        background-repeat no-repeat
        margin 0px auto
        &.donggyu
            background-image url('https://gab505.github.io/pictures/kendo/20150927_092938(1).jpg')
            background-position -340px -40px
            background-size 700px
    a
        cursor pointer
        margin 0 20px
    h1
        border-bottom none !important
        width 100%
section
    color white
    min-height 30vh
    padding 100px 30px
    display flex
    flex-direction column
    justify-content center
    align-items stretch
    position relative
    p
        margin 10px 0
    p.fadeIn
        width 80%
        font-weight bold
        color gray
        opacity 0
        transition all 1s
    h1
        margin 10px 0
        width 10px
        padding-bottom 10px
        border-bottom 2px solid white
    &:hover
        .fadeIn
            background rgba(0,0,0,0.7)
            color white
            opacity 1
    &#skills
        .skill
            border 2px dashed orange
            border-radius 15px
            margin 10px 0
            padding 10px
            overflow hidden
            position relative
            background linear-gradient(90deg, transparent 30vw, orange 70vw)
    &.bgImage
        &.transparent:after
            background-image none !important
        &:nth-of-type(2n)
            //background linear-gradient(45deg, var(--bg) 40%, transparent)
            //background linear-gradient(125deg, white 10%, transparent 60%)
            .imgFrame
                float right
                margin 10px 0px 20px 20px
                width 30%
        &:nth-of-type(2n+1)
            //background linear-gradient(45deg, transparent 40%, white 90%)
            .imgFrame
                float left
                margin 10px 20px 20px 0px
                width 30%
        &:after
            content: "";
            background-position 0 0
            background-size 100vw auto
            background-repeat no-repeat
            overflow hidden
            opacity: 1;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100%;
            position: absolute;
            z-index: -1;
    &#soccer
        --sectionCol: white
        --shadowCol: #03229F
        p
            width 50%
        &:after
            background-image: url(https://gab505.github.io/pictures/soccer/IMG_2676.JPG);
    &#volunteering
        &:after
            background-image: url(https://gab505.github.io/pictures/guatemala/IMG_7296.JPG);
    &#religion
        &:after
            background-image: url(https://gab505.github.io/pictures/church/AKUX9aFam4nUWzxIZQTwuqBDbE8HJ0owyrobH5NGWlwJ9pa4Gkm9lNB8_5fljoJXHsRKBIt-gUEZ8A6uAlOp_PdjWDQkQ6-1NGx8tvMY3X9jNE4Tl9FkO7ckdR_J-oNfeA--.jpeg);
    &#travel
        &:after
            background-image: url('https://gab505.github.io/pictures/family/1471528092674.jpg');
    &#kendo
        &:after
            background-image: url('https://c1.staticflickr.com/1/122/305421726_6d63fba8d1_b.jpg');
    &#teaching
        &:after
            background-image: url('https://s3-media4.fl.yelpcdn.com/bphoto/LflS4MogHzjyXvB6ykWUaQ/348s.jpg');
    &#programming
        &:after
            background-image: url('http://media.istockphoto.com/photos/programming-works-picture-id494345930?k=6&m=494345930&s=612x612&w=0&h=YdRS0VgR5Kb3TQR1goEdZK0oD_BKaPnXfQq7tiucdhI=');
    &#math
        &:after
            background-image: url('http://www.dailywire.com/sites/default/files/styles/article_full/public/uploads/2017/08/math.jpg?itok=vlqwg76Q');

    &#skills
        color white
        background var(--col1)
    &#projectsHeader
        min-height 0
        background gray
    &#projects
        background var(--col1)
        padding: 0px
        display grid
        color white
        @media (max-width: 800px)
            grid-template-columns: repeat(3, 1fr)
        @media (min-width: 801px) and (max-width: 1200px)
            grid-template-columns: repeat(4, 1fr)
        @media (min-width: 1201px)
            grid-template-columns: repeat(5, 1fr)
        grid-auto-rows: 300px
        .project
            overflow hidden
            position relative
            background-position center
            background-size cover
            .text
                position absolute
                left 0
                bottom -50px
                width 100%
                text-align center
                background gray
                color white
                font-weight bold
                padding 10px 0
                transition bottom 0.5s
            &:hover .text
                bottom 0
    &#awards
        background var(--col3)
        .awards
            display flex
            flex-direction column
            justify-content center
            align-items center
            .text
                margin 30px 0 10px 0
                color white
                font-family $serif
                text-align center
                font-weight bolder
            img 
                border 5px solid gray
                border-radius 10px
                width 40%
                transition transform 1s
                &:hover
                    border-radius 0
                    transform scale(1.8)
    

// common elements
.hex
    --w 150px
    --h 90px
    --w2 calc(var(--w) / 3)
    position relative
    width var(--w)
    height var(--h)
    margin var(--w2) 0
    &:before
        content ""
        position absolute
        bottom 100%
        width 0
        border-right calc(var(--w) / 2) solid transparent
        border-left calc(var(--w) / 2) solid transparent
        border-bottom calc(var(--w2)) solid orange
    &:after
        content ""
        position absolute
        top 100%
        width 0
        border-right calc(var(--w) / 2) solid transparent
        border-left calc(var(--w) / 2) solid transparent
        border-top calc(var(--w2)) solid orange

.sectionBreak
    height 30px
    background var(--col3)

img.imgFrame
    border-radius 50%

img.flip
    transform rotate(0.5turn)

    
    
// animations
@keyframes skillAnimation
    from
        width 0%
